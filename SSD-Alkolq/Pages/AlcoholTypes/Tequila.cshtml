@page
@model SSD_Alkolq.Pages.AlcoholTypes.TequilaModel
@{
    ViewData["Title"] = "Tequila";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/alcohol_type.css">

<section id="main">
    <h1 class="type-title">Tequila</h1>
    <img src="~/images/tequila.jpg" alt="tequla" class="type-image" />
    <p class="type-description">
        Distilled from the blue agave plants primarily in the area surrounding the city
        it is named after, Tequila is traditionally drank neat, but is commonly consumed 
        witha  side of sangrita, grenadine and hot chili.
    </p>
</section>

<div>
    @foreach (var item in Model.AlchoholProduct)
    {
        if (item.Type == "Tequila")
        {
            <a class="type-card" asp-page="../AlcoholProducts/Details" asp-route-id="@item.ID">
                <div class="type-alcoholinfo">
                    <img src="~/images/@item.ImageName" , class="type-alcoholimg" />
                    <p class="type-alcoholname">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <p class="type-alcoholprice">
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                </div>
                <form asp-page-handler="AddToCart" method="post">
                    <input type="hidden" value="@item.ID" name="id" />
                    <button class="btn btn-primary">Add to Cart</button>
                </form>
            </a>
        }
    }
</div>

