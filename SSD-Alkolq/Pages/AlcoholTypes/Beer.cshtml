@page
@model SSD_Alkolq.Pages.AlcoholTypes.BeerModel

@{
    ViewData["Title"] = "Beer";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/alcohol_type.css">

<section id="main">
    <h1 class="type-title">Beer</h1>
    <img src="~/images/beer.jpg" alt="beer" class="type-image" />
    <p class="type-description">
        The third most popular drink in the world after water and tea,
        Beer is one of the oldest and most widely consumed alcoholic drinks in the world.
        While malted barley is used most commonly, beer is also brewed from wheat, maize, rice and oats.
    </p>
</section>

<div>
    @foreach (var item in Model.AlchoholProduct)
    {
        if (item.Type == "Beer")
        {
            <a class="type-card" asp-page="~/AlcoholProducts/Details" asp-route-id="@item.ID">
                <div class="type-alcoholinfo">
                    <img src="~/images/@item.ImageName" , class="type-alcoholimg" />
                    <p class="type-alcoholname">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <p class="type-alcoholprice">
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                </div>
                <form asp-page-handler="AddToCart" method="post">
                    <input type="hidden" value="@item.ID" name="id" />
                    <button class="btn btn-primary">Add to Cart</button>
                </form>
            </a>
        }
    }
</div>