@page
@model SSD_Alkolq.Pages.AlcoholTypes.VodkaModel

@{
    ViewData["Title"] = "Vodka";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/alcohol_type.css">

<section id="main">
    <h1 class="type-title">Vodka</h1>
    <img src="~/images/vodka.jpg" alt="vodka" class="type-image" />
    <p class="type-description">
        Vodka is a clear distilled alcoholic beverage from Europe that has different 
        varieties originating in Poland, Russia and Sweden. Composed primarily 
        of water and ethanol, it is traditionally distilled from fermented cereal grains, 
        and more recently, potatoes. It is traditionally drunk neat or freezer chill but 
        can also be served in cocktails or mixed drinks. 
    </p>
</section>

<div>
    @foreach (var item in Model.AlchoholProduct)
    {
        if (item.Type == "Vodka")
        {
            <a class="type-card" asp-page="../AlcoholProducts/Details" asp-route-id="@item.ID">
                <div class="type-alcoholinfo">
                    <img src="~/images/@item.ImageName" , class="type-alcoholimg" />
                    <p class="type-alcoholname">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <p class="type-alcoholprice">
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                </div>
                <form asp-page-handler="AddToCart" method="post">
                    <input type="hidden" value="@item.ID" name="id" />
                    <button class="btn btn-primary">Add to Cart</button>
                </form>
            </a>
        }
    }
</div>











