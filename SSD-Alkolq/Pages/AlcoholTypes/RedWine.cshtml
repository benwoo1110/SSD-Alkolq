@page
@model SSD_Alkolq.Pages.AlcoholTypes.RedWineModel

@{
    ViewData["Title"] = "RedWine";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/alcohol_type.css">

<section id="main">
    <h1 class="type-title">Red Wine</h1>
    <img src="~/images/red-wine.jpg" alt="red wine" class="type-image" />
    <p class="type-description">
        Red wine is a type of wine made from dark-coloured grape varieties.
        The colour of the wine tends to go from an intense violet to brick red, and finally brown as the wine ages.
        A delicacy around the world, red wine is usually enjoyed with foods with bold flavours, like red meat or seafood.
    </p>
</section>

<div>
    @foreach (var item in Model.AlchoholProduct)
    {
        if (item.Type == "Red Wine")
        {
            <a class="type-card" asp-page="~/AlcoholProducts/Details" asp-route-id="@item.ID">
                <div class="type-alcoholinfo">
                    <img src="~/images/@item.ImageName" , class="type-alcoholimg" />
                    <p class="type-alcoholname">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <p class="type-alcoholprice">
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                </div>
                <form asp-page-handler="AddToCart" method="post">
                    <input type="hidden" value="@item.ID" name="id" />
                    <button class="btn btn-primary">Add to Cart</button>
                </form>
            </a>
        }
    }
</div>