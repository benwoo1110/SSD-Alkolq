@page
@model SSD_Alkolq.Pages.AlcoholTypes.RumModel
@{
    ViewData["Title"] = "Rum";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/alcohol_type.css">

<section id="main">
    <h1 class="type-title">Rum</h1>
    <img src="~/images/rum.jpg" alt="rum" class="type-image" />
    <p class="type-description">
        Rum is made by fermenting and then distilling sugarcane molasses or juice. The 
        distillate from the process is aged in oak barrels and becomes rum. There are 
        different grades of wine, the light rums commonly used in cocktails, the dark rums 
        can be consumed neat or on the rocks or in cooking and mixers, while the premium 
        rums are consumed neat or on the rocks.
    </p>
</section>

<div>
    @foreach (var item in Model.AlchoholProduct)
    {
        if (item.Type == "Rum")
        {
            <a class="type-card" asp-page="~/AlcoholProducts/Details" asp-route-id="@item.ID">
                <div class="type-alcoholinfo">
                    <img src="~/images/@item.ImageName" , class="type-alcoholimg" />
                    <p class="type-alcoholname">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <p class="type-alcoholprice">
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                </div>
                <form asp-page-handler="AddToCart" method="post">
                    <input type="hidden" value="@item.ID" name="id" />
                    <button class="btn btn-primary">Add to Cart</button>
                </form>
            </a>
        }
    }
</div>
