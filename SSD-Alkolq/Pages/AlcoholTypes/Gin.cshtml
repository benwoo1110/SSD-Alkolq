@page
@model SSD_Alkolq.Pages.AlcoholTypes.GinModel
@{
    ViewData["Title"] = "Gin";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/alcohol_type.css">

<section id="main">
    <h1 class="type-title">Gin</h1>
    <img src="~/images/gin.jpg" alt="gin" class="type-image" />
    <p class="type-description">
        Gin is a distilled alcoholic drink that derives its predominant flavour from
        juniper berries. With its origins as a medicinal liquour made by monks and 
        alchemists across Europe to rpovide aqua vita, it has since become an object 
        of commerce in the spirits industry.
    </p>
</section>

<div>
    @foreach (var item in Model.AlchoholProduct)
    {
        if (item.Type == "Gin")
        {
            <a class="type-card" asp-page="../AlcoholProducts/Details" asp-route-id="@item.ID">
                <div class="type-alcoholinfo">
                    <img src="~/images/@item.ImageName" , class="type-alcoholimg" />
                    <p class="type-alcoholname">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <p class="type-alcoholprice">
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                </div>
                <form asp-page-handler="AddToCart" method="post">
                    <input type="hidden" value="@item.ID" name="id" />
                    <button class="btn btn-primary">Add to Cart</button>
                </form>
            </a>
        }
    }
</div>

