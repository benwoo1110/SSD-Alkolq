@page
@model WebsiteFeedbackModel
@{
    ViewData["Title"] = "Website Feedback";
    ViewData["ActivePage"] = ManageNavPages.WebsiteFeedback;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FeedbackRecord.FeedbackType" class="control-label"></label>
                <select asp-for="FeedbackRecord.FeedbackType" class="form-control">
                    <option value="Website Bugs" selected disabled>Select a type</option>
                    <option value="Website Bugs">Website Bugs</option>
                    <option value="Suggestions for Improvements">Suggestions for Improvements</option>
                    <option value="Additional Feature Request">Additional Feature Request</option>
                    <option value="Others">Others</option>
                </select>
                <span asp-validation-for="FeedbackRecord.FeedbackType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackRecord.FeedbackContent" class="control-label"></label>
                <textarea asp-for="FeedbackRecord.FeedbackContent" class="form-control" rows="10" cols="30"></textarea>
                <span asp-validation-for="FeedbackRecord.FeedbackContent" class="text-danger pr-5"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
