@page
@model SSD_Alkolq.Areas.Identity.Pages.Account.Manage.WebsiteFeedbackModel

@{
    ViewData["Title"] = "WebsiteFeedback";
    ViewData["ActivePage"] = ManageNavPages.WebsiteFeedback;

}

<h1>WebsiteFeedback</h1>

<h4>FeedbackRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FeedbackRecord.FeedbackType" class="control-label"></label>
                <select asp-for="FeedbackRecord.FeedbackType" class="form-control">
                    <option value="Website Bugs">Website Bugs</option>
                    <option value="Suggestions for Improvements">Suggestions for Improvements</option>
                    <option value="Additional Feature Request">Additional Feature Request</option>
                    <option value="Others">Others</option>
                </select>
                <span asp-validation-for="FeedbackRecord.FeedbackType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackRecord.FeedbackContent" class="control-label"></label>
                <textarea asp-for="FeedbackRecord.FeedbackContent" class="form-control" rows="10" cols="30" required></textarea>
                <span asp-validation-for="FeedbackRecord.FeedbackContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
